<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Transaction</th>
      <th>User</th>
      <th>New Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', user_category_path(current_user,category.id) %></td>
        <td><%= link_to 'Edit', edit_user_category_path(current_user,category) %></td>
        <td><%= link_to 'Destroy', user_category_path(current_user,category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New', new_category_transaction_path(category,Transaction.new)%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_user_category_path(current_user) %>
